@model System.Data.DataTable

@{
    // Yekun dəyərləri hesabla
    decimal totalBalance = 0;
    decimal totalCredit = 0;
    decimal totalDebet = 0;

    foreach (System.Data.DataRow row in Model.Rows)
    {
        totalBalance += Convert.ToDecimal(row["Initial_Balance"]);
        totalCredit += Convert.ToDecimal(row["credit"]);
        totalDebet += Convert.ToDecimal(row["debet"]);
    }
}

<div class="balance-container">
    <h2>💰 Bank və Kassa Balansları</h2>

    <table class="custom-table">
        <thead>
            <tr>

                <th>Name</th>
                <th>Initial Balance</th>
                <th>Credit</th>
                <th>Debet</th>
            </tr>
        </thead>
        <tbody>
            @foreach (System.Data.DataRow row in Model.Rows)
            {
                <tr>
                    
                    <td>@row["name"]</td>
                    <td class="balance">@row["Initial_Balance"]</td>
                    <td class="credit">@row["credit"]</td>
                    <td class="debet">@row["debet"]</td>
                </tr>
            }
            <tr class="total-row">
                <td colspan="2"><strong>Yekun</strong></td>
                <td class="balance"><strong>@totalBalance</strong></td>
                <td class="credit"><strong>@totalCredit</strong></td>
                <td class="debet"><strong>@totalDebet</strong></td>
            </tr>
        </tbody>
    </table>
</div>

